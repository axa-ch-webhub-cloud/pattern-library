{
  "extends": ["airbnb", "plugin:jest/recommended", "prettier"],
  "rules": {
    "max-len": [
      "error",
      {
        "code": 140,
        "tabWidth": 2,
        "ignoreComments": true,
        "ignoreUrls": true,
        "ignoreTemplateLiterals": true
      }
    ],
    "import/prefer-default-export": "off",
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1,
        "ignoredNodes": ["TaggedTemplateExpression[tag.name=/html|outdent/]", "TaggedTemplateExpression[tag.name=/html|outdent/] *"]
      }
    ],
    "no-confusing-arrow": "off",
    "class-methods-use-this": "off",
    "no-return-assign": "off",
    "no-bitwise": "off",
    "no-plus-plus": "off",
    "no-param-reassign": ["error", { "props": false }],
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "no-underscore-dangle": "off",
    "no-use-before-define": ["error", { "functions": false, "classes": false }],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "scripts/**",
          "rollup.config.js",
          "src/utils/polyfills.js",
          "**/story.{js,jsx}",
          "**/demo.{js,jsx}",
          "**/react/*.{js,jsx}",
          "**/src/**/*.react.js",
          "**/demo/**",
          "**/ui.test.js",
          "**/unit.test.{js,jsx}",
          "**/setupTests.js",
          "**/jestPreprocess.js",
          "**/*test.accessor.js",
          "**/*ui.test.js"
        ],
        "packageDir": "./"
      }
    ],
    "object-curly-newline": ["error", { "multiline": true, "consistent": true }],
    "jest/no-jest-import": "off"
  },
  "globals": {
    "XMLHttpRequest": true,
    "history": true,
    "CustomEvent": true,
    "MutationObserver": true,
    "customElements": true,
    "document": true,
    "window": true,
    "ENV": true,
    "PROD": true,
    "DEV": true,
    "fixture": true,
    "test": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "classes": true,
      "decorations": true,
      "jsx": true
    }
  }
}
